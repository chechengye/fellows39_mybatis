<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--读取属性文件的标签-->
    <properties resource="db.properties"></properties>
    <!--设定别名-->
    <typeAliases>
        <!--<typeAlias type="com.weichuang.pojo.User"></typeAlias>-->
        <package name="com.weichuang.pojo"/>
        <package name="com.weichuang.vo"/>
    </typeAliases>
    <!-- 和spring整合后 environments配置将废除 -->
    <environments default="development">
        <environment id="development">
            <!-- 使用jdbc事务管理 -->
            <transactionManager type="JDBC" />
            <!-- 数据库连接池 -->
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driverClass}" />
                <property name="url"
                          value="jdbc:mysql://localhost:3306/fellows39_mybatis?characterEncoding=utf-8" />
                <property name="username" value="root" />
                <property name="password" value="root" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!--<mapper class="com.weichuang.mapper.UserMapper"></mapper>-->
        <package name="com.weichuang.mapper"></package>
    </mappers>

</configuration>
